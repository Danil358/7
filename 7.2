        public class AbsoluteDifferenceCalculator
        {
            public static int CalculateDifference(int n)
            {
                int difference = Math.Abs(n - 123);
                return n > 123 ? difference * 3 : difference;
            }

            public static void Main(string[] args)
            {
                Console.WriteLine("Введите целое число:");
                string input = Console.ReadLine();

                if (int.TryParse(input, out int number))
                {
                    int result = CalculateDifference(number);
                    Console.WriteLine($"Абсолютная разность между {number} и 123: {result}");
                }
                else
                {
                    Console.WriteLine("Неверный ввод. Пожалуйста, введите целое число.");
                }
            }
        }

    }
